<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.android_assigment.SearchFragment">

    <!-- HEADER -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="12dp"
        android:gravity="center_vertical">

        <ImageButton
            android:id="@+id/go_back_btn_search"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:background="@android:color/transparent"
            android:src="@drawable/outline_arrow_back_24"
            app:tint="@android:color/black" />

        <EditText
            android:id="@+id/search_input"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="search...."
            android:inputType="text" />
    </LinearLayout>

    <TextView
        android:id="@+id/title_for_radiogroup"
        android:layout_marginLeft="5dp"
        android:textSize="15sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="select by a game" />

    <LinearLayout
        android:id="@+id/game_group"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:padding="8dp">

        <RadioGroup
            android:id="@+id/search_by_game"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/game_apex"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Apex" />

            <RadioButton
                android:id="@+id/game_cs"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="CS" />

            <RadioButton
                android:id="@+id/game_fortnite"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Fortnite" />

            <RadioButton
                android:id="@+id/game_fc26"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="FC26" />
        </RadioGroup>

        <Button
            android:id="@+id/clear_game_filter_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="נקה"
            android:visibility="gone" />
    </LinearLayout>

    <!-- RESULTS -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/searchrv"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />
</LinearLayout>
